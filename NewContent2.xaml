<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.NewContent2">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label x:Name="Lbl" Text="{Binding MM.Surname}" HorizontalOptions="Center"></Label>
        <Label Text="{Binding MM.Name}"  HorizontalOptions="Center"></Label>
        <Label Text="{Binding MM.Patronymic}"  HorizontalOptions="Center"></Label>
        <Image Source="{Binding MM.Source}" WidthRequest="100" HeightRequest="100"  HorizontalOptions="Center"></Image>
    </VerticalStackLayout>
</ContentView>
